<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Activity.Quiz_screen">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:textSize="16sp"
            android:layout_weight="1"
            android:fontFamily="@font/amiri"
            android:paddingLeft="22sp"
            android:layout_marginTop="11dp"
            android:textColor="@android:color/black"
            android:text="Question: 12/20"
            android:layout_height="wrap_content"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:textSize="16sp"
            android:fontFamily="@font/amiri"
            android:paddingLeft="22sp"
            android:layout_marginTop="11dp"
            android:layout_marginRight="11dp"
            android:textColor="@android:color/black"
            android:text="Timer: 60/2000"
            android:layout_height="wrap_content"></TextView>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:textSize="25sp"
        android:layout_margin="11dp"
        android:fontFamily="@font/amiri"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:text="Which of the below is valid way to instantiate an array in java?"
        android:layout_height="wrap_content"></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="11dp"
        android:layout_marginRight="33dp"
        android:background="@drawable/border_text_title"
        android:elevation="11dp"
        android:fontFamily="sans-serif-light"
        android:padding="11dp"
        android:text="(A)int myArray [] = {1, 3, 5};"
        android:textColor="@android:color/black"
        android:textSize="16sp"></TextView>
    <TextView
        android:layout_width="match_parent"
        android:textSize="16sp"
        android:fontFamily="sans-serif-light"
        android:padding="11dp"
        android:layout_marginTop="11dp"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="33dp"
        android:paddingLeft="22dp"
        android:elevation="11dp"
        android:background="@drawable/border_text_title"
        android:textColor="@android:color/black"
        android:text="(B)int myArray [] [] = {1,2,3,4};"
        android:layout_height="wrap_content"></TextView>
    <TextView
        android:layout_width="match_parent"
        android:textSize="16sp"
        android:fontFamily="sans-serif-light"
        android:padding="11dp"
        android:layout_marginTop="11dp"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="33dp"
        android:paddingLeft="22dp"
        android:elevation="11dp"
        android:background="@drawable/border_text_title"
        android:textColor="@android:color/black"
        android:text="(C)int [] myArray = (5, 4, 3);"
        android:layout_height="wrap_content"></TextView>
    <TextView
        android:layout_width="match_parent"
        android:textSize="16sp"
        android:fontFamily="sans-serif-light"
        android:padding="11dp"
        android:layout_marginTop="11dp"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="33dp"
        android:elevation="11dp"
        android:paddingLeft="22dp"
        android:background="@drawable/border_text_title"
        android:textColor="@android:color/black"
        android:text="(D)int [] myArray = {'1', '2', '3'};"
        android:layout_height="wrap_content"></TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="111dp">
        <TextView
            android:layout_width="match_parent"
            android:textSize="20sp"
            android:layout_marginTop="11dp"
            android:layout_marginLeft="33dp"
            android:layout_marginRight="6dp"
            android:fontFamily="monospace"
            android:padding="5dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_weight="1"
            android:background="@drawable/button_background"
            android:textColor="@android:color/white"
            android:text="Prev"
            android:layout_height="wrap_content"></TextView>
        <TextView
            android:layout_width="match_parent"
            android:textSize="20sp"
            android:layout_marginTop="11dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="33dp"
            android:fontFamily="monospace"
            android:padding="5dp"
            android:background="@drawable/button_background"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:text="Next"
            android:layout_gravity="center"
            android:onClick="button_next"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_height="wrap_content"></TextView>
    </LinearLayout>




</LinearLayout>