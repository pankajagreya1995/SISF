<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.Chapter_Info">
    <TextView
        android:layout_width="match_parent"
        android:id="@+id/txt_desc"
        android:textColor="@android:color/black"
        android:fontFamily="monospace"
        android:layout_margin="22sp"
        android:textSize="22sp"
        android:gravity="center"
        android:text="These are very important and latest GK Questions and general awareness 2019 questions for all competitive exams"
        android:layout_height="wrap_content"></TextView>
    <TextView
        android:layout_width="match_parent"
        android:id="@+id/txt_ques_size"
        android:textColor="@android:color/black"
        android:fontFamily="monospace"
        android:layout_margin="22sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Questions: 20"
        android:layout_height="wrap_content"></TextView>
    <TextView
        android:layout_width="match_parent"
        android:id="@+id/txt_time"
        android:textColor="@android:color/black"
        android:fontFamily="monospace"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_margin="22sp"
        android:text="Timing: 30 minuts"
        android:layout_height="wrap_content"></TextView>
    <TextView
        android:layout_width="match_parent"
        android:text="START"
        android:fontFamily="monospace"
        android:gravity="center"
        android:textSize="22sp"
        android:onClick="Quiz_start"
        android:textStyle="bold"
        android:layout_margin="22sp"
        android:padding="7dp"
        android:background="@drawable/button_background"
        android:layout_height="wrap_content"></TextView>

</LinearLayout>