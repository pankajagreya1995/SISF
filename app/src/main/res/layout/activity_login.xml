<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:onClick="hide_keybord"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Activity.Login">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" >
            <TextView
                android:layout_width="match_parent"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:text="Login"
             android:layout_marginRight="66dp"
                android:fontFamily="serif"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_height="match_parent"></TextView>
        </android.support.v7.widget.Toolbar>



    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_margin="22dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="match_parent"
                    android:src="@drawable/app_logo"
                    android:layout_marginBottom="22dp"
                    android:layout_height="188dp"></ImageView>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:errorEnabled="true"
                    android:id="@+id/txt_emaill"
                    android:layout_margin="11dp">

                    <android.support.design.widget.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_email"
                        android:layout_gravity="bottom"
                        android:gravity="bottom"
                        android:textColor="@color/text_color"
                        android:background="@drawable/desc_field_selector"
                        android:hint="Email"
                        android:inputType="textPersonName"
                        android:padding="11dp" />
                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/txt_passwordl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="11dp"
                    app:errorEnabled="true"
                    app:counterMaxLength="15"
                    app:passwordToggleContentDescription="show"
                    app:passwordToggleDrawable="@android:drawable/ic_lock_idle_lock"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="@color/colorAccent">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/txt_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:background="@drawable/desc_field_selector"
                        android:gravity="bottom"
                        android:textColor="@color/text_color"
                        android:hint="Password"
                        android:inputType="textPassword"
                        android:padding="11dp" />
                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:text="Forgot password"
                    android:layout_gravity="end"
                    android:gravity="end"
                    android:layout_marginBottom="11dp"
                    android:onClick="Forgot_button"
                    android:layout_marginRight="11dp"
                    android:textColor="@color/colorPrimary"
                    android:layout_height="wrap_content"></TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:text="LOGIN"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:paddingLeft="88dp"
                    android:fontFamily="serif-monospace"
                    android:paddingRight="88dp"
                    android:background="@drawable/button_background"
                    android:textSize="22sp"
                    android:padding="10dp"
                    android:id="@+id/login_button"
                    android:onClick="login_button"
                    android:textStyle="bold"
                    android:layout_marginTop="11dp"
                    android:layout_marginRight="11dp"
                    android:layout_marginLeft="11dp"
                    android:textColor="@android:color/white"
                    android:layout_height="wrap_content"></TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_margin="22dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Don\'t have an accont ? "
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginRight="11dp"
                        android:textColor="@color/colorAccent"
                        android:layout_height="wrap_content"></TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="@string/register_txt"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:onClick="register_button"
                        android:layout_marginRight="11dp"
                        android:textColor="@color/colorAccent"
                        android:layout_height="wrap_content"></TextView>
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>






</LinearLayout>